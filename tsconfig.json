{
  "compilerOptions": {
    "target": "es2016",

    "module": "NodeNext",
    "declarationDir": "dist",
    "declaration": true,
    "types": ["vitest/importMeta"],
    "noEmit": true,

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
